
@{
    ViewBag.Title = "Index";
    var tid = Convert.ToInt32(ViewBag.tid);
}

<h2>Index</h2>

@using (Html.BeginForm("Create", "Review", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Oceni trening</h4>
        <hr />
        <div class="form-group">
            <label for="inputPassword3" class=" control-label">Ocena</label>
            <div class="col-sm-12">
                <input type="number" class="form-control" id="inputEmail3" name="review">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class=" control-label">Komentar</label>
            <div class="col-sm-12">
                <textarea type="text" class="form-control" id="inputEmail3" name="comment"></textarea>
            </div>
        </div>
        <input type="hidden" name="user_id" value="@Convert.ToInt32(Session["uid"])">
        <input type="hidden" name="training_id" value="@ViewBag.tid" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
